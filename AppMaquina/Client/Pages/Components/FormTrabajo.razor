<EditForm Model="trabajo" OnValidSubmit="onValidSubmit">
        <div class="form-group">
            <label>Cliente</label>
            <div>
                @* <InputText class="form-control" @bind-value="@trabajo.Cliente"/> *@
            <input type="text" placeholder="Cliente" />

                <ValidationMessage  For="@(()=> trabajo.Cliente)"/>
            </div>
        </div> 
        <div class="form-group">
            <label>Ubicacion</label>
            <div>
                @* <InputText class="form-control" @bind-value="@trabajo.Ubicacion"/> *@
                <input type="text" placeholder="Ubicacion"/>
                <ValidationMessage For="@(()=> trabajo.Ubicacion)" />

            </div>
        </div>
    
        <div class="form-group">
            <label>Hectareas</label>
            <div>
                @* <InputText class="form-control" @bind-value="@trabajo.Hectareas"/> *@
            <input type="text" placeholder="Hectareas" />

                <ValidationMessage For="@(()=> trabajo.Hectareas)" />
            </div>
        </div>
        <div class="form-group">
            <label>Agroquimico</label>
            <div>
            <input type="text" placeholder="Agroquimico" />
                @* <InputText class="form-control" @bind-value="@trabajo.Agroquimico" /> *@
                <ValidationMessage For="@(()=> trabajo.Agroquimico)" />
            </div>
        </div>
    <button type="submit" class="btm btn-primary">Enviar</button>
</EditForm>

@code {
    [Parameter] public Trabajo trabajo { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
}
