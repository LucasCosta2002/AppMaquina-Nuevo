
<EditForm Model="maquinista" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator />
        <div class="modal-body d-flex justify-content-center mt-5">
            <div class="form-row col-md-6">
                <div class="col mb-3">
                <label class="bg-success text-white fw-bold d-inline-block p-1 px-2 rounded-3 mb-2">Nombre</label>
                    <InputText class="form-control" placeholder="Nombre" @bind-Value="@maquinista.Nombre" />
                    <ValidationMessage For="@(() => maquinista.Nombre)" />
                </div>

                <div class="col mb-3">
                    <label class="bg-success text-white fw-bold d-inline-block p-1 px-2 rounded-3 mb-2">DNI</label>
                    <InputText class="form-control" placeholder="DNI" @bind-Value="@maquinista.DNI" />
                    <ValidationMessage For="@(() => maquinista.DNI)" />
                </div>
                <div class="col mb-3">
                    <label class="bg-success text-white fw-bold d-inline-block p-1 px-2 rounded-3 mb-2">Telefono</label>
                    <InputText class="form-control" type="text" placeholder="Telefono" name="telefono" @bind-Value="@maquinista.Telefono" />
                    <ValidationMessage For="@(() => maquinista.Telefono)" />
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center gap-4">
        <button type="submit" class="btn btn-primary">Aceptar</button>
        <button type="submit" class="btn btn-danger" @onclick="onCancel">Cancelar</button>
        </div>
</EditForm>

@code {
    [Parameter] public Maquinista maquinista { get; set; } = new Maquinista();
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }

}
